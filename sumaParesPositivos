class E2{
    public static int sumaPares(int [] vector){
        
        try{
            int suma=0;
            for (int i = 0; i < vector.length; i++) {
                if(vector[i]>=0 && vector[i]%2==0){
                    suma+=vector[i];
                }
            }
            return suma;
        }catch(ArrayIndexOutOfBoundsException ex){
            return 0;
        }
    }
}
